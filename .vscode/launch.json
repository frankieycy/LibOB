    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug Makefile",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build", // Runs the Makefile before debugging
            "program": "${workspaceFolder}/exe/main", // Path to the compiled executable
            "args": [], // Arguments to pass to the program (if any)
            "cwd": "${workspaceFolder}", // Working directory
            "stopAtEntry": false, // Do not stop at the program's entry point
            "environment": [],
            "externalConsole": false, // Use the integrated terminal for output
            "MIMode": "lldb" // Use LLDB for debugging on macOS
        }
    ]
}